/* pages/news/detailNews/detailNews.wxss */

.news-box {
  box-sizing: border-box;
  padding: 30rpx 40rpx;
  /* margin: 20rpx; */
  box-shadow: 0rpx 0rpx 30rpx var(--color-gray);
  border-radius: 20rpx;
  background-color: #FFFFFF;
}

button {
  width: 47%;
  display: inline-block;
  font-size: 30rpx;
  box-sizing: border-box;
  background-color: var(--color-primary);
}

button+button {
  margin-left: 6%;
}


.news {
  font-weight: 300;
  /* margin: 10rpx 0; */
}

.news.title {
  font-size: 38rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.news.row-container{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 18rpx;
}


.news.user {
  font-size: 26rpx;
  color: var(--color-gray-max);
  font-weight: 400;
}

.news.time {
  font-size: 26rpx;
  color: var(--color-gray-dark);
  flex-grow: 1;
  text-align: right;
}

.news.content {
  font-size: 32rpx;
  margin-bottom: 20rpx;
  white-space: pre-wrap;
  font-weight: 400;
  color: var(--color-gray-max);

}

.news.editTime {
  font-size: 26rpx;
  color: var(--color-gray-dark);
  padding-bottom: 20rpx;
  margin-bottom: 5rpx;

  border-bottom:1rpx solid var(--color-gray-normal);

  /* border-bottom: dotted black; */
  /* border-color:var(--color-black-light) */
  /* flex-grow: 1; */
  /* text-align: right; */
}

.news.err {
  font-size: 40rpx;
  font-weight: bold;
}


.loading image {
  width: 165.9rpx;
  height: 90.3rpx;
  margin: 10rpx 292rpx;
  margin-top: 40rpx;
}

.news.tag {
  width: 80rpx;
  height: 38rpx;
  border-radius: 15rpx;
  margin: 0 15rpx 0 0;
  
  font-size: 24rpx;
  font-weight: 500;
  text-align: center;
  line-height: 38rpx;

  background-color: var(--color-primary-light);
  color: var(--color-primary);
}

.album {
  width: 100%;
  text-align: center;
  background-color: var(--color-gray-light);
  color: var(--color-gray);
  font-size: 28rpx;
  padding: 5rpx 0;
  margin-bottom: 40rpx;
}

.album-block {
  display: flex;
  flex-wrap: wrap;
  background-color: var(--color-gray-light);
}

.alb-image {
  width: 207rpx;
  height: 207rpx;
  box-sizing: border-box;
  margin: 5rpx 5rpx;
  background-color: white;
}

.single-image {
  /* width: 100%; */
  height: 200rpx;
}

.comment-board-header {
  font-size: 32rpx;
  font-weight: 600;
  height: 128rpx;
  margin-bottom: 20rpx;
}

#comment-list {
  width: 750rpx;
  height: 100%;
}

.comment {
  display: flex;
  padding: 15rpx 0;
  background-color: white;
  margin-bottom: 10rpx;
}

.comment .left {
  width: 120rpx;
}

.comment .left .avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 25rpx;
  margin: 0 30rpx;
}

.comment .right {
  width: 700rpx;
  padding-right: 30rpx;
}

.comment .right .info-block {
  height: 80rpx;
}

.comment .right .username {
  font-size: 28rpx;
  color: var(--color-black-light);
  font-weight: 500;
}

.comment .right .delete {
  font-size: 22rpx;
  color: var(--color-black-light);
  font-weight: lighter;
  float: right;
}

.comment .right .datetime {
  font-size: 20rpx;
  color: var(--color-gray-max);
}

.comment .right .content {
  font-size: 28rpx;
  color: var(--color-black-light);
}

.comment + .comment {
  border-top: 1rpx solid var(--color-gray-light);
}

#input-block-ph {
  height: 200rpx;
}

#input-block {
  width: 700rpx;
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  padding-top: 20rpx;
  background-color: white;
  box-sizing: border-box;
  border-top: 1rpx solid var(--color-gray-light);
}

#input-block-bottom {
  width: 750rpx;
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
}

/* #input-block.active {
  padding-bottom: 10rpx;
} */

#input-block textarea {
  width: 100%;
  min-height: 30rpx;

  background-color: var(--color-white-dark);
  color: var(--color-black-light);
  padding: 18rpx 20rpx;
  border-radius: 10rpx;

	font-size: 30rpx;
	line-height: 30rpx;
}

#input-block .send-btn {
  width: 100rpx;
  margin: 10rpx 0 0 auto;
  padding: 6rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  background-color: var(--color-primary);
  color: white;
  border-radius: 50rpx;
}

button.long {
  width: 100%;
}

button.primary {
  background-color: var(--color-primary);
}